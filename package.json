{
  "name": "word-game",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Rahul Khanna",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./src/index.js",
    "dev": "cross-env NODE_ENV=develop nodemon ./src/index.js",
    "test": "cross-env NODE_ENV=test jest --forceExit --runInBand --detectOpenHandles --coverage --coverageDirectory=coverage",
    "test:unit": "cross-env NODE_ENV=test jest --forceExit --runInBand --detectOpenHandles --testPathPattern=\"(/src/.*)\\.(spec).js$\""
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "cross-env": "^5.2.0",
    "random-words": "^1.1.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "eslint": "^5.9.0",
    "eslint-config-astro": "^1.0.8",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "jest-tobetype": "^1.2.0",
    "nodemon": "^1.18.7"
  },
  "nyc": {
    "include": "src",
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js",
      "**/index.js"
    ]
  },
  "jest": {
    "testRegex": "(/src/.*)\\.(test|spec).js$",
    "moduleFileExtensions": [
      "js"
    ],
    "testPathIgnorePatterns": [
      "\\index.js$",
      "(/src/.*)\\.(index).js$"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text",
      "clover"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
